<Window x:Class="bossdoyKaraoke_NOW.ClientConnect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bossdoyKaraoke_NOW"
        mc:Ignorable="d"
        Title="ClientConnect" Height="300" MinHeight="300" MaxHeight="300" Width="300" MinWidth="300" MaxWidth="300">
    <Grid>
        <StackPanel  Orientation="Vertical">
            <Label Content="Connect to:"></Label>
            <ListBox VerticalContentAlignment="Center" Height="200" Margin="5,0" BorderBrush="#FFB62222" BorderThickness="1" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,5">
            <Button Content="Cancel" Margin="0,0,5,0" />
            <Button Content="Connect" Margin="0,0,5,0"/>
        </StackPanel>

    </Grid>
</Window>
